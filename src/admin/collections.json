  {
    "name": "work",
    "label": "Works",
    "label_singular": "Work",
    "folder": "static/data/work",
    "extension": "json",
    "format": "json",
    "create": true,
    "identifier_field": "title",
    "slug": "{{fields.id}}",
    "refs": {
      "genre": "Genre"
    },
    "object_refs": {
       "contributors": {
         "relation": "agent",
         "fk": "contributor",
         "additional_fields": ["contributor_role"]
       },
       "citations": {
         "relation": "reference",
         "fk": "citation_reference",
         "additional_fields": ["footnote_number", "citation_comment"]
       }
    },
    "fields": [
      {
        "label": "id",
        "name": "id",
        "widget": "uuid"
      },
      {
        "label": "type",
        "name": "type",
        "widget": "hidden",
        "default": "work"
      },
      {
        "label": "Title",
        "name": "title",
        "widget": "string"
      },
      {
        "label": "Title (Ar)",
        "name": "title_ar",
        "widget": "string",
        "required": false
      },
      {
        "label": "Alternate Titles",
        "name": "alternate_titles",
        "widget": "list",
        "allow_add": true,
        "required": false,
        "field": {
          "label": "Alternate Title",
          "name": "alt_title",
          "widget": "string"
        }
      },
      {
        "label": "Lyrics",
        "name": "lyrics",
        "widget": "text",
        "required": false
      },
      {
        "label": "Genre",
        "name": "genre",
        "widget": "relation",
        "collection": "genre",
        "searchFields": [
          "name"
        ],
        "valueField": "id",
        "displayFields": [
          "name"
        ],
        "multiple": false
      },
      {
        "label": "Contributors",
        "name": "contributors",
        "widget": "list",
        "allow_add": true,
        "required": false,
        "fields": [
          {
            "name": "contributor_role",
            "label": "Role",
            "widget": "select",
            "options": [
              "Composer",
              "Writer"
            ]
          },
          {
            "name": "contributor",
            "label": "Contributor",
            "widget": "relation",
            "collection": "agent",
            "searchFields": [
              "name"
            ],
            "valueField": "id",
            "displayFields": [
              "name"
            ]
          }
        ]
      },
      {
        "label": "Citations",
        "name": "citations",
        "widget": "list",
        "allow_add": true,
        "required": false,
        "fields": [
          {
            "name": "footnote_number",
            "label": "Footnote number",
            "widget": "number"
          },
          {
            "name": "citation_comment",
            "label": "Citation Comment",
            "widget": "text"
          },
          {
            "name": "citation_reference",
            "label": "Citation Reference",
            "widget": "relation",
            "collection": "reference",
            "fields": [
              "title",
              "bibtex"
            ],
            "valueField": "id",
            "displayFields": [
              "title"
            ]
          }
        ]
      }
    ]
  },
