[
  {
    "name": "posts",
    "label": "Posts",
    "label_singular": "Post",
    "folder": "posts",
    "create": true,
    "slug": "{{slug}}",
    "fields": [
      {
        "label": "Title",
        "name": "title",
        "widget": "string"
      },
      {
        "label": "Excerpt",
        "name": "excerpt",
        "widget": "string"
      },
      {
        "label": "Publish Date",
        "name": "date",
